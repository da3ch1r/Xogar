<Window x:Class="XogarWinGui.SteamInstallSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Install Directory" Height="200" Width="550" ResizeMode="NoResize">
    <Grid>
        <Label Content="Steam Install Directory: " HorizontalAlignment="Left" Height="27" Margin="10,79,0,0" VerticalAlignment="Top" Width="133"/>
        <TextBox HorizontalAlignment="Left" Height="27" Margin="148,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" Name="SteamInstallBox" TextAlignment="Left"/>
        <Button Content="..." HorizontalAlignment="Left" Height="27" Margin="482,79,0,0" VerticalAlignment="Top" Width="50" Name="DirectorySelectButton" Click="DirectorySelectButton_Click"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="377,138,0,0" VerticalAlignment="Top" Width="75" Name="OkButton" Click="OkButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="457,138,0,0" VerticalAlignment="Top" Width="75" Name="CancelButton" Click="CancelButton_Click"/>
        <Label Name="ExplanationLabel" HorizontalAlignment="Left" Height="64" Margin="10,10,0,0" VerticalAlignment="Top" Width="463">
            <TextBlock Name="ExplanationBlock" TextWrapping="Wrap"></TextBlock>
        </Label>

    </Grid>
</Window>
